@model PolyFilms.Data.Models.LoginModel
@using PolyFilms.Common
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Login</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700'>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/flaty.css" />
    <link href="~/css/pnotify.custom.min.css" rel="stylesheet" />

    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/pnotify.custom.min.js"></script>
</head>
<body class="login-page">
    <div class="login-wrapper">
        <form id="form-login" action="@Url.Action("Login","Login")" method="post">
            <h3>Login to your account</h3>
            <hr />
            <div class="form-group">
                <div class="controls">
                    @Html.TextBoxFor(m=>m.UserName , new { @placeholder = "User Name" , @class = "form-control" })
                    
                </div>
            </div>
            <div class="form-group">
                <div class="controls">
                    @Html.TextBoxFor(m=>m.Password , new { @placeholder = "Password", @class="form-control" , @type="Password"})
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-1">
                        @Html.CheckBoxFor(m => m.RememberMe, new { @class = "checkbox" })
                    </div>
                    <label> Remember Me </label>
                </div>   
                    
                
            </div>
            <div class="form-group">
                <div class="controls">
                    <button type="submit" class="btn btn-primary form-control">Sign In</button>
                </div>
            </div>
            <hr />
            <p class="clearfix">
                <a href="@Url.Action("ForgotPassword","Login")" class="goto-forgot pull-left">Forgot Password?</a>
            </p>
        </form>    
    </div>
    
    
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    

    <script type="text/javascript">
        
        $(document).ready(function () {
            var errormessage = '@TempData[Enums.NotifyType.Error.GetDescription()]';
            var successmessage = '@TempData[Enums.NotifyType.Success.GetDescription()]';
            if (errormessage !== "") {
                ShowErrorMessage(errormessage);
            }

            if (successmessage !== "") {
                SucessMessage(successmessage);
            }


        });

        function ShowErrorMessage(msg) {
            new PNotify({
                text: msg,
                type: 'error'
            });
        }


        function SucessMessage(msg) {
            new PNotify({
                text: msg,
                type: 'success'
            });

        }
    </script>
</body>

</html>
