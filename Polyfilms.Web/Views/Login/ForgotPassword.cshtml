@model PolyFilms.Data.Models.LoginModel
@using PolyFilms.Common
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Forgot Password</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700'>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/flaty.css" />
    <link href="~/css/pnotify.custom.min.css" rel="stylesheet" />
    
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/pnotify.custom.min.js"></script>

</head>
<body class="login-page">
<!-- BEGIN Main Content -->


<div class="login-wrapper">

        <form id="form-forgot" action="@Url.Action("ForgotPassword","Login")" method="post" >
            <h3>Get back your password</h3>
            <hr />
            <div class="form-group">
                <div class="controls">
                    <input type="text" placeholder="Email" name="Email" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <div class="controls">
                    <button type="submit" class="btn btn-primary form-control">Recover</button>
                </div>
            </div>
            <hr />
            <p class="clearfix">
                <a href="@Url.Action("Login","Login")" class="goto-login pull-left">← Back to login form</a>
            </p>
        </form>

    </div>


    
    <script type="text/javascript">

    $(document).ready(function () {
        var errormessage = '@TempData[Enums.NotifyType.Error.GetDescription()]';
        var successmessage = '@TempData[Enums.NotifyType.Success.GetDescription()]';

        if (errormessage !== "") {
            ShowErrorMessage(errormessage);
        }

        if (successmessage !== "") {
            SucessMessage(successmessage);
        }


    });

    function ShowErrorMessage(msg) {
        new PNotify({
            text: msg,
            type: 'error'
        });
    }


    function SucessMessage(msg) {
        new PNotify({
            text: msg,
            type: 'success'
        });

    }
    </script>

</body>

</html>